<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/cardColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="@dimen/pad8"
        app:cardElevation="0dp">

    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/coverTV"
            android:layout_width="@dimen/cover45dp"
            android:layout_height="@dimen/cover45dp"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:layout_marginStart="@dimen/pad12"
            app:srcCompat="@color/black"/>

    <TextView
            style="@style/cardColors"
            android:id="@+id/songTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="66dp"
            android:paddingBottom="@dimen/pad16"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text16"
            tools:text="Track Name"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="66dp"
            android:paddingTop="@dimen/pad16"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                style="@style/cardColorsBottom"
                android:id="@+id/artistTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Artist name"/>

        <ImageView
                style="@style/cardColorsBottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="5dp"
                android:src="@drawable/ellipse"/>

        <TextView
                style="@style/cardColorsBottom"
                android:id="@+id/timeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0:00"/>
    </LinearLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/pad12"
            android:paddingTop="@dimen/pad8"
            android:layout_gravity="end"
            android:src="@drawable/user_arrow"/>

</androidx.cardview.widget.CardView>
