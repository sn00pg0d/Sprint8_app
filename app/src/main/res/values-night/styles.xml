<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearStyle">
        <item name="android:background">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">@color/icons_in_settings</item>
        <item name="android:layout_marginEnd">@dimen/pad12</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/pad16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:color">?attr/colorOnPrimary</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:src">?attr/imageButtonStyle</item>
    </style>

</resources>